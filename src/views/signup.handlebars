<div class="d-flex flex-column justify-content-center align-items-center" style="height:80vh;">
    <h1 class="my-4">{{pageTitle}}</h1>
    <form id="signup" action="/api/session/signup" method="post" class="signup-form">
        <div class="row mb-3">
            <div class="col-5">
                <label for="InputFirstName" class="form-label">Nombre</label>
            </div>
            <div class="col-7">
                <input class="form-control" id="InputFirstName" name="firstName">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-5">
                <label for="InputLastName" class="form-label">Apellido</label>
            </div>
            <div class="col-7">
                <input class="form-control" id="InputLastName" name="lastName">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-5">
                <label for="InputAge" class="form-label">Edad</label>
            </div>
            <div class="col-7">
                <input class="form-control" id="InputAge" name="age">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-5">
                <label for="InputEmail1" class="form-label">Email</label>
            </div>
            <div class="col-7">
                <input type="email" class="form-control" id="InputEmail1" placeholder="example@test.com"
                    aria-describedby="emailHelp" name="email">
                <div id="emailHelp" class="form-text">Esta es una pagina de prueba no use un correo real.</div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-5">
                <label for="InputPassword1" class="form-label">Contraseña</label>
            </div>
            <div class="col-7">
                <input type="password" class="form-control" id="InputPassword1" name="password">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-5">
                <label for="InputPassword2" class="form-label">Repita Contraseña</label>
            </div>
            <div class="col-7">
                <input type="password" class="form-control" id="InputPassword2">
            </div>
        </div>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <button type="submit" class="btn btn-primary">Registrarse</button>
        </div>
    </form>
</div>