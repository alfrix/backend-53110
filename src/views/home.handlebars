<h1>Home</h1>
<hr>
<section class="py-4">
    <div class="container p-0">
        <div class="col-12">
            <h2 class="">Productos:</h2>
        </div>
        <div class="row">
            {{#each products}}
            <div class="card p-1 m-3 col-sm-12 col-md-4 col-lg-4 col-xl-3 col-xxl-2">
                <div class="card-thumbnail">
                    {{!-- <img src="..." class="card-img-top" alt="imagen de {{title}}"> --}}
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <p class="card-text">{{description}}</p>
                    <h5 class="card-title center">${{price}}</h5>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>