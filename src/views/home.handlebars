<h1>Home</h1>
<hr>
<section class="py-2">
    <div class="container p-0">
        <div class="col-12">
            <h2 class="">Productos:</h2>
        </div>
        <div class="row">
            {{#each products.payload}}
            <div class="card p-1 m-3 col-sm-12 col-md-4 col-lg-4 col-xl-3 col-xxl-2">
                <div class="card-thumbnail">
                    {{!-- <img src="..." class="card-img-top" alt="imagen de {{title}}"> --}}
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <p class="card-text">{{description}}</p>
                    <h5 class="card-title center">${{price}}</h5>
                </div>
                <div class="my-2">
                    <form class="ajax-form" method="post" action="/api/carts/{{../user.cart}}/product/{{_id}}">
                        <button type="submit" class="btn btn-primary mx-4">Agregar al Carrito</button>
                    </form>
                </div>
            </div>
            {{/each}}
        </div>
        <div class="d-flex justify-content-center align-items-center my-1">
            {{#if products.hasPrevPage}}
                <a href="/?page=1">
                    <button type="button" class="btn btn-primary mx-4"><i class="bi bi-chevron-bar-left"></i></button>
                </a>
                <a href="/?page={{products.prevPage}}">
                    <button type="button" class="btn btn-primary mx-4"> <i class="bi bi-chevron-left"></i> </button>
                </a>
            {{else}}
                <button type="button" class="btn btn-secondary mx-4"><i class="bi bi-chevron-bar-left"></i></button>
                <button type="button" class="btn btn-secondary mx-4"> <i class="bi bi-chevron-left"></i> </button>
            {{/if}}
            {{products.page}}
            {{#if products.hasNextPage}}
                <a href="/?page={{products.nextPage}}">
                    <button type="button" class="btn btn-primary mx-4"> <i class="bi bi-chevron-right"></i> </button>
                </a>
                <a href="/?page={{products.totalPages}}">
                    <button type="button" class="btn btn-primary mx-4"><i class="bi bi-chevron-bar-right"></i></button>
                </a>
            {{else}}
                <button type="button" class="btn btn-secondary mx-4"> <i class="bi bi-chevron-right"></i> </button>
                <button type="button" class="btn btn-secondary mx-4"><i class="bi bi-chevron-bar-right"></i></button>
            {{/if}}
        </div>
    </div>
</section>

<script src="/js/forms.js"></script>